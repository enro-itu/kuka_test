<?xml version="1.0"?>
<robot name="my_robot_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- BASE -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/1_base.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/1_base.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- ROTARY -->
  <link name="rotary_joint_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/2_rotary_joint.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/2_rotary_joint.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="base_to_rotary" type="continuous">
    <parent link="base_link"/>
    <child link="rotary_joint_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/> <!-- Pivot noktasÄ± -->
    <axis xyz="0 0 1"/>
  </joint>

  <!-- SERVO -->
  <link name="servo_motor_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/3_servo_motor.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/3_servo_motor.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="rotary_to_servo" type="fixed">
    <parent link="rotary_joint_link"/>
    <child link="servo_motor_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- LOWER ARM -->
  <link name="lower_arm_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/4_lower_arm.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/4_lower_arm.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.7"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.007" iyy="0.007" izz="0.007" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="servo_to_lower" type="revolute">
    <parent link="servo_motor_link"/>
    <child link="lower_arm_link"/>
    <origin xyz="0.0 0.0 0.10" rpy="0 0 0"/> <!-- Fusion pivot -->
    <axis xyz="1 0 0"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- UPPER ARM -->
  <link name="upper_arm_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/5_upper_arm.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/5_upper_arm.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.7"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.007" iyy="0.007" izz="0.007" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="lower_to_upper" type="revolute">
    <parent link="lower_arm_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/> <!-- Fusion pivot -->
    <axis xyz="1 0 0"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- WRIST SUPPORT -->
  <link name="wrist_support_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/6_wrist_support.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/6_wrist_support.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="upper_to_support" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="wrist_support_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/> <!-- Fusion pivot -->
    <axis xyz="1 0 1"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- WRIST -->
  <link name="wrist_link">
    <visual>
      <geometry>
        <mesh filename="package://rk_demo/meshes/7_wrist.STL" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://rk_demo/meshes/7_wrist.STL" scale="1 1 1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="support_to_wrist" type="revolute">
    <parent link="wrist_support_link"/>
    <child link="wrist_link"/>
    <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/> <!-- Fusion pivot -->
    <axis xyz="1 0 0"/>
    <limit effort="10" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <!-- END EFFECTOR -->
  <link name="end_effector"/>
  <joint name="wrist_to_end" type="fixed">
    <parent link="wrist_link"/>
    <child link="end_effector"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

</robot>
